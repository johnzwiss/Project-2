{% layout 'layout.liquid' %}
{% block content %}
<div class="container-sm">
    <form action="/books/search" method="POST">
        <fieldset>
            <legend>Find New Book</legend>
            <label class = "form-label"> Search: </label>
             <input type="text" placeholder="Enter Author, Title, ISBN, etc.." name="search" class="form-control">
        </fieldset>
        <input type="submit" value="Search" class="btn btn-success">
      
    </form>
    
    {% for book in books %}
    
   <p><img src = "{{book.volumeInfo.imageLinks.thumbnail}}"></p> 
   <p>Title: {{book.volumeInfo.title}}</p> 
   <p>Author: {{book.volumeInfo.authors}}</p> 
   <p>Description: {{book.volumeInfo.description}}</p> 
   <p>ISBN: {{ book.volumeInfo.industryIdentifiers[0].identifier }}  <a href="/books/new/{{ book.volumeInfo.industryIdentifiers[0].identifier }} " class="btn btn-info">
    View {{ book.volume.title }}
</a> </p>

   {% endfor %}
  
  


</div>
{% endblock %}