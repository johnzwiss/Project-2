{% block content %}
    <div class="card mb-4 shadow">
        <div class="card-body">
            <p>{{ comment.note }}</p>
            <div class="d-flex justify-content-between">
                <small>author:{{ comment.author }}</small>
                {% if comment.author == userId or username == adminName %}
                    <form style = "display: block" action="/comments/delete/{{ book.id }}/{{ comment._id }}?_method=DELETE" method="POST">
                        <input type="submit" value="Delete">
                    </form>
                    {% else %} 
                    <form style = "display: none" action="/comments/delete/{{ book.id }}/{{ comment._id }}?_method=DELETE" method="POST">
                        <input type="submit" value="Delete">
                    </form>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}